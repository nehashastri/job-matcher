# ==============================================
# Job Scraper Configuration Template
# ==============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ==============================================
# OpenAI Configuration (REQUIRED)
# ==============================================
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4o-mini
JOB_MATCH_THRESHOLD=8

# ==============================================
# LinkedIn Credentials (REQUIRED)
# ==============================================
LINKEDIN_EMAIL=your.email@example.com
LINKEDIN_PASSWORD=your_password_here

# ==============================================
# File Paths
# ==============================================
RESUME_PATH=./data/resume.pdf
ROLES_PATH=./data/roles.json
BLOCKLIST_PATH=./data/company_blocklist.json

# ==============================================
# Scraping Configuration
# ==============================================
# Interval between scraping cycles (minutes)
SCRAPE_INTERVAL_MINUTES=30

# Maximum retries for network requests
MAX_RETRIES=5

# Delay between requests (seconds)
REQUEST_DELAY_MIN=2
REQUEST_DELAY_MAX=5

# Maximum number of jobs to scrape per role
MAX_JOBS_PER_ROLE=50

# ==============================================
# Filtering Configuration
# ==============================================
# Maximum number of applicants to consider
MAX_APPLICANTS=100

# Require visa sponsorship
REQUIRES_SPONSORSHIP=true

# Reject unpaid or volunteer roles
REJECT_UNPAID_ROLES=true
REJECT_VOLUNTEER_ROLES=true

# Minimum years of experience allowed (0 disables check)
MIN_REQUIRED_EXPERIENCE_YEARS=0

# Allow roles that explicitly require a PhD
ALLOW_PHD_REQUIRED=true

# Skip already viewed jobs on LinkedIn
SKIP_VIEWED_JOBS=true

# ==============================================
# Networking Configuration
# ==============================================
# Maximum connection requests per job
MAX_CONNECTIONS_PER_JOB=30

# Maximum pages to search for people
MAX_PEOPLE_SEARCH_PAGES=3

# ==============================================
# Logging Configuration
# ==============================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_RETENTION_DAYS=30

# ==============================================
# Email/Notification Configuration (Optional)
# ==============================================
# Gmail SMTP settings for email notifications
#
# IMPORTANT - Gmail App Password Setup (REQUIRED for Gmail):
# 1. Enable 2FA on your Google account: https://myaccount.google.com/security
# 2. Create App Password: https://myaccount.google.com/apppasswords
#    - Select app: Mail, device: Other (Custom name) â†’ "Job Scraper"
#    - Copy the 16-character password (no spaces)
# 3. Use the App Password as SMTP_PASSWORD below (not your regular Gmail password)
#
# For Gmail, use these settings:
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your16charapppassword
# EMAIL_FROM=your-email@gmail.com
# EMAIL_TO=your-email@gmail.com

SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=
EMAIL_TO=

# Enable/disable notifications
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_TOAST_NOTIFICATIONS=true
HEADLESS=false

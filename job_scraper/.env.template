# ==============================================
# Job Scraper Configuration Template
# ==============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ==============================================
# OpenAI Configuration (REQUIRED)
# ==============================================
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4o-mini
JOB_MATCH_THRESHOLD=8

# ==============================================
# LinkedIn Credentials (REQUIRED)
# ==============================================
LINKEDIN_EMAIL=your.email@example.com
LINKEDIN_PASSWORD=your_password_here

# ==============================================
# File Paths
# ==============================================
RESUME_PATH=./data/resume.pdf
ROLES_PATH=./data/roles.json
BLOCKLIST_PATH=./data/company_blocklist.json

# ==============================================
# Scraping Configuration
# ==============================================
# Interval between scraping cycles (minutes)
SCRAPE_INTERVAL_MINUTES=30

# Maximum retries for network requests
MAX_RETRIES=5

# Delay between requests (seconds)
REQUEST_DELAY_MIN=2
REQUEST_DELAY_MAX=5

# Maximum number of jobs to scrape per role
MAX_JOBS_PER_ROLE=50

# ==============================================
# Filtering Configuration
# ==============================================
# Maximum number of applicants to consider
MAX_APPLICANTS=100

# Require visa sponsorship
REQUIRES_SPONSORSHIP=true

# Skip already viewed jobs on LinkedIn
SKIP_VIEWED_JOBS=true

# ==============================================
# Networking Configuration
# ==============================================
# Maximum connection requests per job
MAX_CONNECTIONS_PER_JOB=30

# Maximum pages to search for people
MAX_PEOPLE_SEARCH_PAGES=3

# ==============================================
# Logging Configuration
# ==============================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_RETENTION_DAYS=30

# ==============================================
# Email/Notification Configuration (Optional)
# ==============================================
# SMTP settings for email notifications (leave empty for Windows toast only)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=
EMAIL_TO=

# Enable/disable notifications
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_TOAST_NOTIFICATIONS=true
